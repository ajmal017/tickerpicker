def run_screen(screen, tickers, date)
  Dir.chdir("../cmdline")
  cmdline = "./screen.rb -t #{tickers.join(',')} -d #{date} -c \"#{screen}\""
  output = `#{cmdline}`
  Dir.chdir(HOMEDIR)
  output.split 
end

